<% layout("/layouts/boilerplate") %>



  <body class="bg-light">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-8"> <!-- Set card width using grid -->
          <div class="card shadow" style="width: 100%; height: 700px;"> <!-- Custom height -->
            <div class="card-header text-center   bg-light
            $dark-text-emphasis">
              <h3>raheed</h3>
            </div>
            <div class="card-body">
              <form method="post" action="/listing/<%= list.id %>?_method=PUT">
                <!-- Title -->
                <div class="mb-3">
                  <label for="title" class="form-label"><b>Title</b></label>
                  <input type="text" class="form-control" id="title" name="listing[title]" value="<%= list.title %>"
                    required />
                </div>

                <!-- Description -->
                <div class="mb-3">
                  <label for="description" class="form-label"><b>Description</b></label>
                  <input type="text" class="form-control" id="description" name="listing[description]"
                    value="<%= list.description %>" required />
                </div>

                <!-- Image URL -->
                <div class="mb-3">
                  <label for="image" class="form-label"><b>Image URL</b></label>
                  <input type="text" class="form-control" id="image" name="listing[image]"
                    value="<%= list.image.url %>" />
                </div>
                <!-- Price -->
                <div class="mb-3">
                  <label for="price" class="form-label"><b>Price</b></label>
                  <input type="number" class="form-control" id="price" name="listing[price]" value="<%= list.price %>"
                    required />
                </div>

                <!-- Location -->
                <div class="mb-3">
                  <label for="location" class="form-label"><b>Location</b></label>
                  <input type="text" class="form-control" id="location" name="listing[location]"
                    value="<%= list.location %>" required />
                </div>

                <!-- Country -->
                <div class="mb-3">
                  <label for="country" class="form-label"><b>Country</b></label>
                  <input type="text" class="form-control" id="country" name="listing[country]"
                    value="<%= list.country %>" required />
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                  <button type="submit" class="btn btn-primary w-100">Edit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>