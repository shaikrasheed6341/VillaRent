<% layout("/layouts/boilerplate") %>

<body>
    
    <div class="container">
        <div class="row"><br>
            <% alllisting.forEach((listing, index) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listing.title %>
                            </h5>
                            <a class="custom-link" href='/listing/<%= listing.id  %>'><i class="fa-solid fa-indian-rupee-sign"></i>
                                <%= listing.price %>/Night
                            </a>
                        </div>
                    </div>
                </div>
                <% if ((index + 1) % 3 === 0) { %>
                    </div><div class="row">
                <% } %>
            <% }); %>
        </div>
    </div>

    <form action="/listing/new" method="get" class="mt-4">
        <button class="btn btn-primary">ADD New List</button>
    </form>
</body>
